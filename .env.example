# OpenAI GPT-5 Configuration
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# GPT-5 Model Configuration (September 2025)
OPENAI_MODEL=gpt-5
OPENAI_MODEL_VARIANT=gpt-5-mini  # Options: gpt-5, gpt-5-mini, gpt-5-nano
OPENAI_VERBOSITY=medium         # Options: low, medium, high
OPENAI_REASONING_EFFORT=medium  # Options: minimal, low, medium, high

# Advanced GPT-5 Settings
OPENAI_MAX_TOKENS=8192
OPENAI_TEMPERATURE=0.7
OPENAI_ENABLE_THINKING=true    # Enable GPT-5's reasoning mode for better accuracy

# Drone Configuration
DRONE_COUNT=3
DRONE_BASE_PORT=14540           # First drone port (14540, 14541, 14542)
DRONE_TIMEOUT_SECONDS=30        # Connection timeout
SIMULATION_WORLD=search_rescue_enhanced

# PX4 Configuration
PX4_SITL_PATH=/home/cobe-liu/Developing/PX4-Autopilot
PX4_DEFAULT_ALTITUDE=20.0       # Default takeoff altitude in meters
PX4_SAFETY_RADIUS=100.0         # Safety radius in meters

# Search Area Configuration (GPS coordinates)
DEFAULT_SEARCH_CENTER_LAT=47.397971057728974
DEFAULT_SEARCH_CENTER_LON=8.546163739800146
DEFAULT_SEARCH_RADIUS_M=200     # Search radius in meters

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEBSOCKET_PORT=8765
WEB_DEBUG=false

# Telemetry Configuration
TELEMETRY_UPDATE_RATE_HZ=1.0    # Telemetry update frequency
TELEMETRY_LOG_ENABLED=true
TELEMETRY_LOG_PATH=./logs

# Mission Configuration
MISSION_PLANNING_TIMEOUT=30     # GPT-5 planning timeout in seconds
MISSION_EXECUTION_TIMEOUT=300   # Mission execution timeout in seconds
WAYPOINT_TOLERANCE_M=2.0        # Waypoint arrival tolerance in meters

# Safety and Emergency Configuration
EMERGENCY_LAND_ENABLED=true
LOW_BATTERY_THRESHOLD=25        # Battery percentage for emergency procedures
MAX_FLIGHT_TIME_MINUTES=15      # Maximum flight time per mission

# Logging Configuration
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/drone_controller.log

# Development Settings
DEBUG_MODE=false
SIMULATION_SPEED_FACTOR=1.0     # 1.0 = real-time, >1.0 = faster
ENABLE_MOCK_DRONES=false        # For testing without PX4